@using leaderboard.Client.Toolbox
@inherits LayoutComponentBase
@inject IAuthenticationService AuthService

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudText Color="Color.Inherit">Leaderboard</MudText>
        @*Leaderboard*@
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudAvatar Image="@($"https://cdn.discordapp.com/avatars/{AuthService.GetUserDiscordIdClaim(context)}/{AuthService.GetAvatarIdClaim(context)}.png")" />
                <MudButton Link="/logout" StartIcon="@Icons.Material.Filled.Logout" Color="Color.Inherit">Log Out</MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Link="/login" StartIcon="@Icons.Material.Filled.Login" Color="Color.Inherit">Log In</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    @*<MudDrawer Open="true">

    </MudDrawer>*@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
